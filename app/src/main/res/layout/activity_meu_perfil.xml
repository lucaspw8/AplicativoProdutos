<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MeuPerfilActivity"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MINHA CONTA"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"/>

        <TextView
            android:id="@+id/txtNomeUsuPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"/>

        <TextView
            android:id="@+id/txtEmailUsuPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo conta:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"/>

        <TextView
            android:id="@+id/txtTipoUsuPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"/>

    </LinearLayout>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btnEditarPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:bootstrapSize="lg"
        app:bootstrapBrand="info"
        app:roundedCorners="true"
        app:buttonMode="regular"
        app:showOutline="false"
        android:layout_marginTop="15dp"
        android:layout_gravity="end"

        android:text="EDITAR"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btnExcluirPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:bootstrapSize="lg"
        app:bootstrapBrand="danger"
        app:roundedCorners="true"
        app:buttonMode="regular"
        app:showOutline="false"
        android:layout_marginTop="10dp"

        android:text="EXCLUIR CONTA"/>

</LinearLayout>