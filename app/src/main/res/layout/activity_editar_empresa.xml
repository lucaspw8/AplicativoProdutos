<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarEmpresa"
    android:focusable="true" android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Editar empresa"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtNomeEmpresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome:"
                android:textColor="@color/CorPreta"
                android:textSize="16sp" />


            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/edtEditarNomeEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                app:bootstrapBrand="primary"
                app:bootstrapSize="lg"
                app:roundedCorners="true" />


            <TextView
                android:id="@+id/txtTelefoneEmpresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Telefone:"
                android:textColor="@color/CorPreta"
                android:textSize="16sp" />

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/edtEditarTelefoneEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:maxLength="14"
                app:bootstrapBrand="primary"
                app:bootstrapSize="lg"
                app:roundedCorners="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Endereço"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rua:"
                android:textColor="@color/CorPreta"
                android:textSize="16sp" />

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/edtEditarRuaEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                app:bootstrapBrand="primary"
                app:bootstrapSize="lg"
                app:roundedCorners="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Bairro:"
                android:textColor="@color/CorPreta"
                android:textSize="16sp" />

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/edtEditarBairroEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                app:bootstrapBrand="primary"
                app:bootstrapSize="lg"
                app:roundedCorners="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Número:"
                android:textColor="@color/CorPreta"
                android:textSize="16sp" />

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/edtEditarNumeroEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                app:bootstrapBrand="primary"
                app:bootstrapSize="lg"
                app:roundedCorners="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Complemento:"
                android:textColor="@color/CorPreta"
                android:textSize="16sp" />


            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/edtEditarComplementoEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences|textMultiLine"
                android:singleLine="false"
                app:bootstrapBrand="primary"
                app:bootstrapSize="lg"
                app:roundedCorners="true" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/btnSalvarEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Salvar"
                android:textSize="20sp"
                app:bootstrapBrand="success"
                app:bootstrapSize="lg"
                app:buttonMode="regular"
                app:roundedCorners="true"
                app:showOutline="false" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/btnEditarEmpresaCancelar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Cancelar"
                android:textSize="20sp"
                app:bootstrapBrand="danger"
                app:bootstrapSize="lg"
                app:buttonMode="regular"
                app:roundedCorners="true"
                app:showOutline="false" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>